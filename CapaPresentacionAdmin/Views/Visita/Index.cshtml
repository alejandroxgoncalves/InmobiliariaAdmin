@model IEnumerable<Inmobiliaria.Dominio.Visita>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de visitas</h1>

<p>
    <a asp-action="Create">Crear nueva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Propiedad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Propiedad.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Documento)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Agente.Documento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar </a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar </a>
            </td>
        </tr>
}
    </tbody>
</table>
